datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


model User{
    id String @id @default(cuid())
    name String?
    email String @unique
    password String
    role Role @default(USER)
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    refreshToken String? @unique
}

enum Role{
    USER
    SUPER_ADMIN
}